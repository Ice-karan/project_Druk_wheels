[flake8]
max-line-length = 127
exclude = 
    migrations,
    __pycache__,
    manage.py,
    settings.py,
    env,
    venv,
    .git,
    .vscode,
    */migrations/*,
    */static/*,
    */media/*

# Only check for critical errors (syntax errors, undefined names)
# This allows old code to pass while catching real bugs
select = E9,F63,F7,F82
    
per-file-ignores =
    __init__.py:F401
    */tests.py:F401,F811
    */admin.py:F401
    */models.py:F401
